<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="main"
            type="com.library.base.liuxi.takeaway.MainActivity"/>

        <import type="com.library.base.liuxi.takeaway.view.AddPersonView"/>
    </data>

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        tools:context="com.library.base.liuxi.takeaway.MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolbarStyle"
            android:background="@color/colorPrimaryDark"
            app:titleTextColor="@color/colorSnow"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorSnow"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSnow"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    style="@style/EditTextStyle.TextInputLayout"
                    android:hint="支付价格*"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/pay_price"
                        style="@style/EditTextStyle.Common.takeaway"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/EditTextStyle.TextInputLayout"
                    android:hint="优惠价格*"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/coupon_price"
                        style="@style/EditTextStyle.Common.takeaway"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/EditTextStyle.TextInputLayout"
                    android:hint="配送费*"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/shipping_price"
                        style="@style/EditTextStyle.Common.takeaway"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"/>
                </android.support.design.widget.TextInputLayout>

                <com.library.base.liuxi.takeaway.view.AddPersonView
                    android:id="@+id/addPersonView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/to_add_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:padding="20dp"
                        android:src="@drawable/ic_add_box_black_36dp"/>

                    <ImageView
                        android:id="@+id/to_calculate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:padding="20dp"
                        android:src="@drawable/ic_arrow_forward_black_36dp"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>