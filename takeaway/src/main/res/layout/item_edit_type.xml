<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.library.base.liuxi.takeaway.bean.ItemPriceData"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSnow"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.liuxi.baselibrary.view.BaseTextView
            android:id="@+id/item_name"
            style="@style/TextStyle.Common"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1.5"
            android:drawableLeft="@drawable/ic_person_add_grey600_36dp"
            android:gravity="center"
            android:text="@{item.itemName}"
            android:hint="请选择姓名"
            android:textColor="@color/colorSnow"/>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pay_price"
            style="@style/EditTextStyle.Common.takeaway"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorTransparent"
            android:hint="请输入单人原价(包含配送费)*"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"/>

    </LinearLayout>
</layout>